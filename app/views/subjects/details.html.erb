<style>

  .buttons {
    width: 400px !important;
  }

  .sidebar-nav {
    font-size: 12px;
  }

  .demographics {
    width: 99%;
  }

  .demographics td , th{
    text-align: left;
  }

  #sub-content-view {
    background-color: #FFFFDD;
    height: auto;
    border: 1px dotted #696969;
  }

  #sub-content-view hr {
    border-style: dotted;
    border-width: 1px;
    margin-left: 12px;
    margin-right: 12px; 
    background-color: black;
  }


  .demographics {
  margin-left: 10px;
  margin-top: 10px;
  font-family: Tahoma,Verdana,Arial;
  font-size: 11px; 
  width: 98%;
  text-align: left;
}

.demographics th{
  word-wrap: break-word;
  vertical-align: top;
  color: #404040;
}

.demographics td{
  vertical-align: top;
}

.xool_information {                                                           
  font-size: 11px;                                                              
  margin-left: 12px;                                                            
  margin-right: 12px;                                                           
}
</style>


  <div id = "page-title">
    <%=@module.name%>
  </div>

  <div class="well sidebar-nav">

    <div id = "sub-content-view">

    <table class = "demographics">
      <tr>
        <th>Name:&nbsp;</th>
        <td>
          <%= @module.name %>
        </td>
        <th>Date created:&nbsp;</th><td><%=@module.created_at.strftime('%d %B %Y')%></td>
      </tr>
        <th>ID number:&nbsp;</td><td><%=@module.id.to_s.rjust(5,'0')%></td>
      </tr>
    </table>

    <hr />

    <p class="xool_information"><strong>Module description</strong></p>
    <p class="xool_information">
   
      <textarea disabled="disabled"><%=@module.description%></textarea>

    </p>


  </div>






  </div>

